#include<iostream> 
using namespace std; 
int main()
{
	int a[2][3] = { 5,3,7,0,1,2 };
	int b[2][3] = { 1,2,3,4,5,6 };
	int c[2][3];
	int i, j;
	cout << "A Matrisi:" << endl;
	for (i = 0; i < 2; i++)
	{
		for (j = 0; j < 3; j++)
			cout << a[i][j] << "\t";
		cout << endl;
	}
	cout << " B matrisi:" << endl;
	for (i = 0; i < 2; i++)
	{
		for (j = 0; j < 3; j++)
			cout << b[i][j] << "\t";
		cout << endl;
	}
	cout << "C matrisi:" << endl;
	for (i = 0; i < 2; i++)
	{
		for (j = 0; j < 3; j++)
			cout << a[i][j] + b[i][j] << "\t";
		cout << endl;
	}
	system("pause");
	return 0;
}
