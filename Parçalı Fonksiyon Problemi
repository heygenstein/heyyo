/*
                      3x-4,           x<1
           f(x)=      x+2,            1<=x<=10
                      2x+4,           x=>10
*/




#include <iostream>
using namespace std;
int main()
{
	double x, y;
	cout << "X degerini giriniz:" << endl;
	cin >> x;
	if (x < 1)
	{
		y = 3 * x - 4;
	}
	else
	{
		if (x >= 1 && x <= 10)
		{
			y = x + 2;
		}
		else
		{
			if (x > 10)
			{
				y = 2 * x + 4;
			}
		}
	}
	cout << "Fonksiyon Sonucu:" << y << endl;
	return 0;
	system("pause");
}
