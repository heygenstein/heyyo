#include <iostream>
using namespace std;
int main()
{
	int islem;
	float sayi1, sayi2;
	cout << "1.sayiyi giriniz:";
	cin >> sayi1;
	cout << "2.sayiyi giriniz:";
	cin >> sayi2;
	cout << "isleminizi seciniz + - * /";
	cin >> islem;
	switch (islem)
{
	case '+':
		cout << "Toplama sonucu:" << sayi1 + sayi2;
		break;
	case '-':
		cout << "Cikarma sonucu:" << sayi1 - sayi2;
		break;
	case '*':
		cout << "Carpma Sonucu:" << sayi1 * sayi2;
		break;
	case '/':
		cout << "Bolme Sonucu:" << sayi1 / sayi2;
		break;
	default:
		cout << "islem secmediniz";
}
	system("pause");
	return 0;
}
